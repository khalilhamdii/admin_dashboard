<div class=" bg-gradient-primary min-vh-100">
  <div class="container">
    <div class=" row justify-content-center">
      <div class="col-md-9 col-lg-6 col-xl-6">
        <div class="card shadow-lg o-hidden border-0 my-5">
          <div class="card-body p-0">
            <div class="p-5">
              <div class="text-center">
                <h4 class="text-dark mb-4">Change your password</h4>
              </div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>
                <div class="form-group">
                  <%= f.label :password, "New password" %><br />
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                  <% end %>
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-user" %>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation, "Confirm new password" %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user" %></div>
                <%= f.submit "Change my password", class: "btn btn-primary btn-block text-white btn-user" %>
                <hr>
              <% end %>
              <div class="text-center"><%= render "devise/shared/links" %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
