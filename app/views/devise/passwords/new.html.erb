<div class='bg-gradient-primary'>
  <div class="container vh-100">
    <div class="row justify-content-center">
      <div class="col-md-9 col-lg-6 col-xl-6  ">
        <div class="card shadow-lg o-hidden border-0 my-5">
          <div class="card-body p-0">
            <div class="p-5">
              <div class="text-center">
                <h4 class="text-dark mb-2">Forgot Your Password?</h4>
                <p class="mb-4">Please enter your email below!</p>
              </div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email Address...", class: "form-control form-control-user" %></div>
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block text-white btn-user"  %>
              <% end %>
              <div class="text-center">
                <hr><%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
