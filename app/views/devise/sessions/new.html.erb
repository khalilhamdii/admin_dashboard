<div class=" bg-gradient-primary vh-100">
  <div class="container">
    <div class=" row justify-content-center">
      <div class="col-md-9 col-lg-6 col-xl-6">
        <div class="card shadow-lg o-hidden border-0 my-5">
          <div class="card-body p-0">
            <div class="p-5">
              <div class="text-center">
                <h4 class="text-dark mb-4">Welcome Back!</h4>
              </div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email Address...", class: "form-control form-control-user" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control form-control-user" %></div>
                <div class="form-group">
                  <div class="custom-control custom-checkbox small">
                    <div class="form-check">
                      <% if devise_mapping.rememberable? %>
                        <%= f.check_box :remember_me, class: "form-check-input custom-control-input" %>
                        <%= f.label :remember_me, class: "form-check-label custom-control-label" %>
                      <% end %>
                    </div>
                  </div>
                </div>
                <%= f.submit "Login", class: "btn btn-primary btn-block text-white btn-user" %>
                <hr>
              <% end %>
              <div class="text-center"><%= render "devise/shared/links" %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
